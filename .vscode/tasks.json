{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build OpenCV App (MSVC)",
      "type": "shell",
      "command": "cl",
      "args": [
        "/nologo",
        "/std:c++17",
        "/EHsc",
        "/MD",
        "/I", "C:/opencv/build/include",
        "main.cpp",
        "/link",
        "/LIBPATH:C:/opencv/build/x64/vc16/lib",
        "opencv_world4120d.lib"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$msCompile"]
    }
  ]
}
